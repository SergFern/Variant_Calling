# ################### Samtools #################################

%apprun samtools
   exec samtools "$@"

%appinstall samtools
	git clone https://github.com/samtools/htslib
    
		cd htslib
		autoheader
		autoconf
		./configure
		make -j 8
		make install
		cd ..
	git clone https://github.com/samtools/samtools
		cd samtools
		autoheader
		autoconf -Wno-syntax
		./configure
		make -j 8
		make install
		cd ..
 %apphelp samtools
   samtools . http://www.htslib.org/

